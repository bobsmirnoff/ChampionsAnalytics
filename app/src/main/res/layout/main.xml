<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_team_left"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/abc_switch_track_mtrl_alpha" />

            <TextView
                android:id="@+id/name_team_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:lines="2"
                android:text="lolveryverylongteamname"
                android:textIsSelectable="false"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:gravity="center"
                android:text="90"
                android:textIsSelectable="false"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/delimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:autoText="false"
                android:gravity="center"
                android:text=":"
                android:textIsSelectable="false"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/score_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="90"
                android:textIsSelectable="false"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_team_right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical|center_horizontal"
                android:lines="2"
                android:text="lolveryverylongteamname"
                android:textIsSelectable="false"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/logo_team_right"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/abc_switch_track_mtrl_alpha" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/table_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TableLayout
            android:id="@+id/table_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:text="New Text" />

    <ImageButton
        android:id="@+id/fabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/fab" />

    <Button
        android:id="@+id/newpair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fabButton"
        android:layout_alignLeft="@+id/fabButton"
        android:layout_alignStart="@+id/fabButton"
        android:text="new" />

    <Button
        android:id="@+id/retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newpair"
        android:layout_alignLeft="@+id/newpair"
        android:layout_alignStart="@+id/newpair"
        android:layout_marginBottom="23dp"
        android:text="retry" />

</RelativeLayout>
